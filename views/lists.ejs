<%- include("header") -%>

<body>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <%newListItems.forEach(function(item){%>
      <form action="/delete" method="post" >
      <div class="item">
        <input type="checkbox" value="<%=item._id%>" onchange="this.form.submit()" name="checkbox">
        <p><%= item.name%></p>
        <input type="hidden" name="nameOfList" value="<%=listTitle%>">
      </div>
    </form>
    <%})%>
    <form class="item" action= <%= route %> method="post" onkeydown="return event.key != 'Enter';" >
      <input type="text" name="task" placeholder="New Task" autocomplete="off" autoaccept="off">
      <button type="submit" name="button">+</button>
    </form>
  </div>

<%- include("footer") -%>
